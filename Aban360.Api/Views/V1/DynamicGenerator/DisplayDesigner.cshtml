@using Stimulsoft.Report.Mvc;
@using Stimulsoft.Report.Web;

@{
    Layout = "~/Views/V1/Shared/_Layout.cshtml";
    ViewBag.Title = "طراحی";
}

@Html.StiNetCoreDesigner(new StiNetCoreDesignerOptions()
{
    Actions =
    {
        GetReport = "design",
        SaveReport = "save",
        SaveReportAs = "save-as",
        DesignerEvent = "design-event"
    },
    Localization = "~/AppData/DynamicReport/fa.xml",
    Appearance =
    {
        ShowTooltipsHelp = false,
        ShowDialogsHelp = false,
        ShowTooltips=false,
        DefaultUnit = Stimulsoft.Report.StiReportUnitType.Centimeters,
    },
    Theme = StiDesignerTheme.Office2022WhitePurple,
    Bands =
    {
        ShowChildBand = false,
        ShowEmptyBand = false,
        ShowOverlayBand = false,
    },
    Toolbar =
    {
        ShowAboutButton=false,
    },
    Behavior =
    {
        ShowSaveDialog=true
    }
})